/**
 * @file Firestore Security Rules for Vidyalaya Connect
 * @description This ruleset enforces a user-ownership model for user profiles and a public-read, owner-write model for notices.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile data. Only the user with the matching {userId} can read or write their profile.
 * - /users/{userId}/notices/{noticeId}: Stores notices created by the associated user. Includes denormalized 'authorId' for authorization independence.
 *
 * Key Security Decisions:
 * - User profiles are strictly private; listing all users is disallowed.
 * - Notices are publicly readable, but only the author can create, update, or delete them.
 * - Denormalization: The `authorId` field in `Notice` documents is crucial for efficient authorization. It avoids costly `get()` calls to the `/users/{userId}` document.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles. Only the user with the matching ID can read or write their own profile.
     * @path /users/{userId}
     * @allow (create) - User with UID 'user_abc' can create /users/user_abc with matching id.
     * @allow (get, update, delete) - User with UID 'user_abc' can read/write /users/user_abc.
     * @deny (create) - User with UID 'user_xyz' cannot create /users/user_abc.
     * @deny (get, update, delete) - User with UID 'user_xyz' cannot read/write /users/user_abc.
     * @principle Enforces document ownership for all operations on user profiles.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to notices created by a specific user.
     * @path /users/{userId}/notices/{noticeId}
     * @allow (get, list) - Any user can read/list all notices.
     * @allow (create) - User with UID 'user_abc' can create /users/user_abc/notices/notice_123 with authorId: 'user_abc'.
     * @allow (update, delete) - User with UID 'user_abc' can update/delete /users/user_abc/notices/notice_123 where resource.data.authorId == 'user_abc'.
     * @deny (create) - User with UID 'user_xyz' cannot create /users/user_abc/notices/notice_123.
     * @deny (update, delete) - User with UID 'user_xyz' cannot update/delete /users/user_abc/notices/notice_123.
     * @principle Allows public read access, but enforces document ownership for write operations.
     */
    match /users/{userId}/notices/{noticeId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(authorId) {
        return request.auth.uid == authorId;
      }

       function isExistingOwner(authorId) {
          return isOwner(authorId) && resource != null;
      }


      allow get: if true;
      allow list: if true;
      allow create: if isSignedIn() && isOwner(request.resource.data.authorId);
      allow update: if isExistingOwner(resource.data.authorId);
      allow delete: if isExistingOwner(resource.data.authorId);
    }
  }
}